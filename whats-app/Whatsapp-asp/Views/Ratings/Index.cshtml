@model IEnumerable<Whatsapp_asp.Models.Rating>

@{
    ViewData["Title"] = "Index";
}

<h1>Ratings Database</h1>

<form asp-action="Search">
 
        <input name="id" placeholder= "Enter full name" />
        <input type ="submit" value="Search" class="btn btn-primary">
</form>

<p>
    <a asp-action="Create" class="btn btn-primary" style="margin-top:1%">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raiting)
            </th>
            <th>
                Date/Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raiting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Name">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Name">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    double avg = 0;
    int count = 0;
    foreach (var item in Model) {
        avg += item.Raiting;
        count++;
    }
    avg /= count;
    <div>Average rating is: @avg</div>
}

